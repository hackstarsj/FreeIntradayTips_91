<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:visibility="gone"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/line"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:textColor="@color/grey_900"
                    android:textSize="16sp"
                    android:text="-"
                    android:layout_weight="1"
                    android:id="@+id/stock_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:id="@+id/price"
                android:textSize="17sp"
                android:paddingRight="10dp"
                android:text="-"
                android:gravity="end"
                android:textColor="@color/grey_900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp" />
                <TextView
                    android:padding="5dp"
                    android:id="@+id/price_per"
                    android:textSize="14sp"
                    android:paddingRight="10dp"
                    android:text="-"
                    android:gravity="end"
                    android:textColor="@color/grey_900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp" />
                <ImageView
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"
                    android:id="@+id/ticker"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_below="@id/line"
                android:id="@+id/line2"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/Bottom_Text_Title"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:text="Low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/Bottom_Text_Value"
                        android:textColor="#000"
                        android:text="-"
                        android:id="@+id/low"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/Bottom_Text_Title"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:text="High"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        style="@style/Bottom_Text_Value"
                        android:textColor="#000"
                        android:id="@+id/high"
                        android:text="-"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/Bottom_Text_Title"
                            android:textColor="#000"
                            android:padding="5dp"
                            android:text="Pr. Close"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/Bottom_Text_Value"
                            android:textColor="#000"
                            android:id="@+id/pr_close"
                            android:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/Bottom_Text_Title"
                            android:textColor="#000"
                            android:padding="5dp"
                            android:text="Open"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            style="@style/Bottom_Text_Value"
                            android:textColor="#000"
                            android:id="@+id/opens"
                            android:text="-"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            <View
                android:background="@color/grey_500"
                android:id="@+id/color_bg"
                android:layout_below="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_item"
                app:tabMode="scrollable"
                android:layout_below="@+id/color_bg"
                android:layout_height="wrap_content">

            </com.google.android.material.tabs.TabLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/stock_page"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/tab_item"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_gravity="bottom"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp">
            <RelativeLayout
                android:id="@+id/adView2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>