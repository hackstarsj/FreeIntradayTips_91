<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_name"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:background="@drawable/card_border"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
         <LinearLayout
             android:background="#03A9F4"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
                <TextView
                    android:text="Date : 2019-01-01 18:00"
                    android:textColor="#fff"
                    android:id="@+id/date_time"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
             <View
                 android:background="#FF9800"
                 android:layout_width="5dp"
                 android:layout_height="match_parent"/>
             <TextView
                 android:text="Qty : 10"
                 android:textColor="#fff"
                 android:textSize="14sp"
                 android:id="@+id/qty"
                 android:paddingLeft="10dp"
                 android:padding="10dp"
                 android:singleLine="true"
                 android:layout_weight="1"
                 android:textStyle="bold"
                 android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SYMBOL"
                        android:textSize="14sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorBlack" />


                    <TextView
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:id="@+id/sell_buy"
                        android:text="SELL RANGE"
                        android:layout_weight="1"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#FFF"
                        android:background="#F44336"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="AVG PRICE."
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#03A9F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
               <LinearLayout
                   android:padding="8dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/symbol"
                       android:text="COALINDIA.NS"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                       android:textColor="@color/indigo_900" />


                   <TextView
                       android:textAlignment="center"
                       android:text="201-202"
                       android:id="@+id/price_range"
                       android:layout_weight="1"
                       style="@style/TextAppearance.AppCompat.Subhead"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/light_blue_500"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_weight="1"
                       android:text="201"
                       android:id="@+id/price_avg"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/light_blue_500"
                       android:textAlignment="center"
                       style="@style/TextAppearance.AppCompat.Subhead"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_below="@+id/divider2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:text="TARGETS"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_1"
                                android:text="1"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_2"
                                android:text="2"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_3"
                                android:text="2"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Price"
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_marginBottom="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:id="@+id/text_buy_1"
                                android:text="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_buy_2"
                                android:text="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_buy_3"
                                android:text="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:text="ACHIEVED"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_1"
                                android:text="DONE"
                                android:textColor="#000"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_2"
                                android:text="DONE"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_3"
                                android:text="DONE"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Amount"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_marginBottom="3dp"
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:id="@+id/text_profit_1"
                                android:text="1"
                                android:layout_marginBottom="5dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_profit_2"
                                android:text="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_profit3"
                                android:text="2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:background="#E91E63"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="STOP LOSS"
                        android:id="@+id/stop_loss_text"
                        android:textColor="#fff"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAlignment="center"
                        android:text="2220"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:id="@+id/stop_loss_value"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#fff"
                        android:text="PROFIT/LOSS"
                        android:textSize="14sp"
                        android:id="@+id/amount_profit_loss"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:background="#4CAF50"
                    android:id="@+id/profit_loss_line"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:id="@+id/profit_or_loss_text"
                        android:textColor="#FFF"
                        android:text="PROFIT"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#FFF"
                        android:text="TOTAL VALUE"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="1000"
                        android:textColor="#fff"
                        android:id="@+id/final_value"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

             </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>