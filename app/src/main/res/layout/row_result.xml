<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:background="@drawable/card_border"
        android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
         <LinearLayout
             android:background="#03A9F4"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
                <TextView
                    android:text="@string/date_2019_01_01_18_00"
                    android:textColor="#fff"
                    android:id="@+id/date_time"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
             <View
                 android:background="#FF9800"
                 android:layout_width="5dp"
                 android:layout_height="match_parent"/>
             <TextView
                 android:text="@string/qty_10"
                 android:textColor="#fff"
                 android:textSize="14sp"
                 android:id="@+id/qty"
                 android:paddingStart="10dp"
                 android:paddingEnd="1dp"
                 android:padding="10dp"
                 android:singleLine="true"
                 android:layout_weight="1"
                 android:textStyle="bold"
                 android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
         </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/symbol"
                        android:textSize="14sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textColor="@color/colorBlack" />


                    <TextView
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:id="@+id/sell_buy"
                        android:text="@string/sell_range"
                        android:layout_weight="1"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#FFF"
                        android:background="#F44336"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="@string/avg_price"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorBlack"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#03A9F4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
               <LinearLayout
                   android:padding="8dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/symbol"
                       android:text="@string/stock_name"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                       android:textColor="@color/indigo_900" />


                   <TextView
                       android:textAlignment="center"
                       android:text="@string/_201_202"
                       android:id="@+id/price_range"
                       android:layout_weight="1"
                       style="@style/TextAppearance.AppCompat.Subhead"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/light_blue_500"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_weight="1"
                       android:text="@string/_201"
                       android:id="@+id/price_avg"
                       android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                       android:textColor="@color/light_blue_500"
                       android:textAlignment="center"
                       style="@style/TextAppearance.AppCompat.Subhead"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:text="@string/targets"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_1"
                                android:text="@string/_1"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_2"
                                android:text="@string/_2"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_target_3"
                                android:text="@string/_2"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@string/price"
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_marginBottom="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:id="@+id/text_buy_1"
                                android:text="@string/_1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_buy_2"
                                android:text="@string/_2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_buy_3"
                                android:text="@string/_2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:text="@string/achieved"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="16sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_1"
                                android:text="@string/done"
                                android:textColor="#000"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_2"
                                android:text="@string/done"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:id="@+id/text_achieved_3"
                                android:text="@string/done"
                                android:layout_marginBottom="5dp"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@string/amount"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:layout_marginBottom="3dp"
                                android:background="#2196F3"
                                android:textColor="#ffffff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:background="#2196F3"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"/>
                            <TextView
                                android:id="@+id/text_profit_1"
                                android:text="@string/_1"
                                android:layout_marginBottom="5dp"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_profit_2"
                                android:text="@string/_2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="14sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/text_profit3"
                                android:text="@string/_2"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/light_blue_500"
                                android:layout_marginBottom="5dp"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:background="#E91E63"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="@string/stop_loss"
                        android:id="@+id/stop_loss_text"
                        android:textColor="#fff"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAlignment="center"
                        android:text="@string/_2220"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:id="@+id/stop_loss_value"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#fff"
                        android:text="@string/profit_loss"
                        android:textSize="14sp"
                        android:id="@+id/amount_profit_loss"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#2196F3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:background="#4CAF50"
                    android:id="@+id/profit_loss_line"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:id="@+id/profit_or_loss_text"
                        android:textColor="#FFF"
                        android:text="@string/profit"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#FFF"
                        android:text="@string/total_value"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/_1000"
                        android:textColor="#fff"
                        android:id="@+id/final_value"
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

             </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>