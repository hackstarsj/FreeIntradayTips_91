<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:padding="5dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:background="#009688"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="@string/free_intraday_tips_buy_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:hint="@string/entry_price"
                android:inputType="number"
                android:id="@+id/entry_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:hint="@string/stop_loss"
                android:id="@+id/stop_loss"
                android:inputType="number"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:singleLine="true"
                android:text="@string/_1"
                android:hint="@string/quantity"
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText
                android:hint="@string/target"
                android:inputType="number"
                android:id="@+id/target"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <LinearLayout
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="@string/profit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/profit"
            android:text="@string/profit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="@string/loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/loss"
                android:text="@string/loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingEnd="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="@string/risk_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:id="@+id/risk_reward"
                android:text="@string/_1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/order_type"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/limit"
                android:text="@string/limit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/market"
                android:text="@string/market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/varity"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/reg"
                android:text="@string/reg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/bo"
                android:text="@string/bo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/co"
                android:text="@string/co"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/amo"
                android:text="@string/amo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/totalprice"
        android:textColor="#000"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="@string/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:background="#F44336"
        android:text="@string/buy"
        android:textColor="#fff"
        android:id="@+id/buy_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:text="@string/open_zerodha_account"
        android:id="@+id/open_zerodha"
        android:layout_marginBottom="50dp"
        android:textColor="#F44336"
        android:background="@drawable/border_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/close"
        android:text="@string/close"
        android:textColor="#F44336"
        android:background="@drawable/border_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>